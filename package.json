{
  "name": "sermon-library",
  "version": "1.0.0",
  "description": "A desktop application for managing sermon libraries, inspired by Calibre",
  "main": "dist/main.js",
  "homepage": "./",
  "icon": "assets/icon.ico",
  "scripts": {
    "build": "tsc && vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "start": "concurrently \"npm run dev\" \"wait-on http://localhost:5174 && electron .\"",
    "dev": "vite --port 5174",
    "preview": "vite preview",
    "dist": "npm run build && npm run build:electron && electron-builder",
    "dist:msi": "npm run build && npm run build:electron && electron-builder --win msi",
    "dist:nsis": "npm run build && npm run build:electron && electron-builder --win nsis",
    "dist:win": "npm run build && npm run build:electron && electron-builder --win",
    "pack": "npm run build && npm run build:electron && electron-builder --dir",
    "test": "jest"
  },
  "keywords": [
    "sermon",
    "library",
    "management",
    "electron",
    "react",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/sharp": "^0.31.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "jest": "^29.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.4.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "lucide-react": "^0.263.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.34.3"
  },
  "build": {
    "appId": "com.sermonlibrary.app",
    "productName": "Sermon Library",
    "icon": "./assets/icon.ico",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "assets/icon.ico"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "msi",
          "arch": ["x64"]
        },
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "./assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false,
      "artifactName": "${productName} ${version}.${ext}"
    },
    "msi": {
      "oneClick": false,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "warningsAsErrors": false,
      "runAfterFinish": true,
      "artifactName": "${productName} Setup ${version}.${ext}",
      "shortcutName": "Sermon Library"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "artifactName": "${productName} Setup ${version}.${ext}",
      "shortcutName": "Sermon Library",
      "uninstallDisplayName": "Sermon Library",
      "installerIcon": "./assets/icon.ico",
      "uninstallerIcon": "./assets/icon.ico"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
